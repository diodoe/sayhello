<h1>Edit profile</h1>

<%= form_for(@user) do |f| %>         
  <%= render 'shared/error_messages', :object => f.object %>
  <%= render 'form', :f => f %>  
  <div class="actions">
    <%= f.submit "Update" %>
  </div>       
 <% end %>
  <%= gravatar_for @user %>
